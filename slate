config focusCheckWidthMax 3000
config nudgePercentOf screenSize
config resizePercentOf screenSize
config windowHintsBackgroundColor 50;53;58;0.8
config windowHintsFontName HelveticaNeue

alias ox screenOriginX
alias oy screenOriginY
alias currentSize windowSizeX;windowSizeY

alias termWidth 570
alias vimWidth 563
alias browserWidth 1110
alias browserOffset 22

alias gutter 30
alias ext1 ${ox}+${gutter}/2
alias ext2 ${ext1}+${termWidth}+${gutter}
alias ext3 ${ext2}+${vimWidth}+${gutter}
alias center (screenSizeX-windowSizeX)/2;(screenSizeY-windowSizeY)/2 ${currentSize}

alias term-ext    ${ext1};${oy}+${gutter}/2 ${currentSize}
alias vim-ext     ${ext2};${oy}+${gutter}/2 ${currentSize}
alias browser-ext ${ext3};${oy} ${browserWidth}

layout ext 'iTerm'         move ${term-ext} #;726
layout ext 'MacVim'        move ${vim-ext} #;1411
layout ext 'Google Chrome' move ${browser-ext};1414
layout ext 'Safari'        move ${browser-ext};1414
layout ext 'Sparrow'       move ${center}

layout mbp 'iTerm'         corner top-left
layout mbp 'MacVim'        corner top-left
layout mbp 'Google Chrome' corner top-right resize:${browserWidth};874
layout mbp 'Safari'        corner top-right resize:${browserWidth};874
layout mbp 'Sparrow'       move ${center}

default ext resolutions:2560x1440
default mbp resolutions:1440x900

bind ;:ctrl hint sdfjkla;gh
bind h:cmd,ctrl focus left
bind j:cmd,ctrl focus down
bind k:cmd,ctrl focus up
bind l:cmd,ctrl focus right

bind ]:ctrl nudge +${browserOffset} +0
bind [:ctrl nudge -${browserOffset} +0
bind backslash:ctrl move ${center}

#bind esc:cmd relaunch
bind 1:ctrl layout ext
bind 2:ctrl layout mbp
