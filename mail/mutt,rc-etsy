# vim:ft=muttrc:
source ~/.mutt/defaults

set from=zak@etsy.com
set folder=imaps://zak@mailbox.etsy.com/
set hostname=etsy.com
set imap_pass="`cat ~/.mutt/pw-etsy`"
set record="=sent/`date '+%Y'`"
set spoolfile=+

macro index d "<save-message>=Trash <enter>" "move message to trash"
macro pager d "<save-message>=Trash <enter>" "move message to trash"
