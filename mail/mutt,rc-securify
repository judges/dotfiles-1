# vim:ft=muttrc:
source ~/.mutt/defaults

set from=zjohnson@securify.com
set folder=imaps://zjohnson@hq-ex
set hostname=securify.com
set imap_pass="`cat ~/.mutt/pw-securify`"
set record="=Sent Items"
set spoolfile="=Inbox"

mailboxes ! =Bugzilla "=Vuln Research"
subscribe sbps@securify.com engineeringall@securify.com hqall@securify.com everyone@securify.com

macro index d "<save-message>=Deleted <enter>" "move message to trash"
macro pager d "<save-message>=Deleted <enter>" "move message to trash"
