[user]
	name = Zak Johnson
	email = zakj@nox.cx

[alias]
	box = !open -a Gitbox .
	ci = commit -v
	co = checkout
	d = diff
	dc = diff --cached
	lg = log --graph --pretty=graph
	out = log --pretty=graph @{upstream}..
	record = add -p
	st = status --branch --short
	unstage = reset HEAD --
	unstash = stash pop

[core]
	autocrlf = input
	safecrlf = true
	pager = less -FSX

[pretty]
	graph = %C(yellow)%h%Creset %s%d %C(bold black)%an %ar

[push]
	default = simple

[rebase]
	autosquash = true

[color]
	ui = auto
