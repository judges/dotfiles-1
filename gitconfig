[user]
    name = Zak Johnson
    email = zakj@nox.cx

[alias]
    box = !open -a Gitbox .
    ci = commit -v
    co = checkout
    d = diff
    dc = diff --cached
    graph = log --graph --oneline
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    out = log @{upstream}..
    record = add -p
    st = status --branch --short
    unstage = reset HEAD --
    unstash = stash pop

[core]
    autocrlf = input
    safecrlf = true
    pager = less -FSX

[push]
    default = tracking

[rebase]
    autosquash = true

[color]
    ui = auto
