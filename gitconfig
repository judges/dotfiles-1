[user]
    name = Zak Johnson
    email = zakj@nox.cx

[alias]
    box = !open -a Gitbox .
    ci = commit -v
    co = checkout
    d = diff
    dc = diff --cached
    graph = log --graph --oneline
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\n\" --graph --date=short
    out = log origin/master..HEAD
    record = add -p
    st = status --branch --short
    unstage = reset HEAD --
    unstash = stash pop

[core]
    autocrlf = input
    safecrlf = true
    pager = cat

[push]
    default = tracking
